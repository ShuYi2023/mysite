server {
    listen 80;
    server_name _;

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:8000;
    }

    location /static/ {
        root /home/max/mysite/;
        add_header Pragma public;
        add_header Cache-Control "public";
    }

    location /media/ {
        root /home/max/mysite/;
        add_header Pragma public;
        add_header Cache-Control "public";
    }

}
